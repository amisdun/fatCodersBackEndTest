{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "prettier/prettier": "warn"
  },
  "plugins": ["prettier"]
}
